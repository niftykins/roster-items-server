.status-banner
	$bold()
	position absolute
	top 100%
	left 0
	right 0
	display flex
	align-items center
	justify-content center
	height 2.25rem
	opacity 0
	color $white
	transition all 250ms ease, width 0 linear
	box-shadow 0 1px 1px $slight-black
	text-shadow 0 1px 1px $slight-black
	pointer-events none

	&.show
		opacity 1

	&.success
		background-color $green

	&.error
	&.socket
		background-color $red
