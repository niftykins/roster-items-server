@require 'nib'
@require 'mixins'
@require 'colours'
@require 'variables'

global-reset()

*
	box-sizing border-box

// disable OS X over-scroll
html, body
	overflow hidden
	width 100%
	height 100%

body
	$font-family()
	color $black
	font-size 16px
	line-height 1.2
	// min-height 100%
	-webkit-font-smoothing antialiased
	background-color $grey-background

a
	color inherit
	text-decoration none

b, strong
	$bold()

p
	margin 0 0 1rem

h1
	letter-spacing -1px
	font-size 2rem
	line-height 2.5rem

h1, h2, h3, h4, h5
	margin 0 0 1rem
	font-weight 600

#root
	position absolute
	top 0
	right 0
	bottom 0
	left 0

.page-container
	display flex
	flex-direction column
	height 100%

.placeholder
	color $grey

@require 'wow'
@require 'card'
@require 'tooltip'
@require 'button'
@require 'input'
@require '../components/*'

@require 'layout'

@keyframes stretchdelay
	0%, 40%, 100%
		transform scaleY(0.3)
	20%
		transform scaleY(0.6)

.loader
	&.centered
		$center()

	height 8rem
	font-size 0

	& > div
		display inline-block
		margin 0 1px
		width 1rem
		height 100%
		border-radius $small-border-radius
		background-color $left-menu
		animation stretchdelay 1.2s infinite ease-in-out

	.r2
		animation-delay -1.1s

	.r3
		animation-delay -1.0s

	.r4
		animation-delay -0.9s

	.r5
		animation-delay -0.8s

@require 'ladda.css'
